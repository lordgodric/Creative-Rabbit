<p id="notice" class"notice"><%= notice %></p>
<div class="container">

  <div class="container">
  <div class="row">
    <i class="fa fa-list " aria-hidden="true"></i> Listing Posts
      <% if customer_signed_in? %>
        <%= link_to 'New Post', new_post_path, :class=>"btn btn-success-outline pull-right "%>
      <% end %>
    <br><br>
  </div>
  </div>

  <div class="marketing ">
    <% @posts.each do |post| %>
      <div class="post">
        <div class="row post-content-wrapper">
          <div class="col-sm-9">
            <h4><%= link_to post.title, post %></h4>
            <p class="content"><%= post.content.match(/^.{0,300}\b/)[0] %>...</p>
              <div class="container">
              <div class="row">
                <div class=" col-xs-6">
                  <i class="fa fa-user" aria-hidden="true">&nbsp</i><%= link_to current_customer.name, customer_path(current_customer)  %>
                </div>
                <div class=" col-xs-6">
                  <p class="pull-right"><i class="fa fa-clock-o" aria-hidden="true">&nbsp</i><%= post.created_at.strftime("%d %b %Y") %></p>
                </div>
              </div>
              </div>
          </div>
          <div class="col-sm-3 preview-image">

                  <h5 class="">Old</h5>
                  <div class="old-logo"><%= image_tag post.old_logo.url(:medium), class: "card-img-top" %></div>

                  <p class="text-muted">New: <%= post.logos.count %></p> 

          </div>
        </div>
      </div>
      <hr>
    <% end %>
  </div>

</div>
